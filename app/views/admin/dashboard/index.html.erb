<h1>Admin Dashboard</h1>

<h3><%= link_to "Admin Merchants", "/admin/merchants" %></h3>
<h3><%= link_to "Admin Invoices", "/admin/invoices" %></h3>

<h3>Top 5 Customers</h3>
<% @customers.top_customers.each do |customer| %>
<p>Name: <%= customer.first_name %> <%= customer.last_name %></p>
<p>Total Transactions: <%= customer.success_count %></p>
<% end %>

<h3>Incomplete Invoices</h3>
<% @invoices.incomplete_invoices.each do |invoice| %>
   <p>Invoice # <%= link_to "#{invoice.id}", admin_invoices_path(invoice.id) %> - <%= invoice.created_at.strftime('%A, %B %e, %Y')%></p>
<% end %>
