<h1>Admin Merchant Index</h1>

 <h2> Top 5 Merchants by Generated Revenue: </h2>
  <div id="top_5_merchants"> 
    <% @merchants.top_5_merchants.each do |merchant| %>
    
        <%= merchant.id %>
        <%= link_to merchant.name, merchant_dashboard_path(merchant) %>
      <% end %>
  </div>

<h2>Enabled Items</h2>
<table>
  <thead>
    <tr>
      <th>Item ID</th>
      <th>Item Name</th>
      <th>Status</th>
      <th>Update Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

<% @merchants.each do |merchant| %>
  <tr>
          <td><%= merchant.id %><td>
          <td><%= link_to merchant.name, "/admin/merchants/#{merchant.id}" %><td>
          <td><% if  merchant.status == 'enabled' %><td>
            <td><%= merchant.status %><td>
          <td><%= button_to "Disable", "/admin/merchants/#{merchant.id}", method: :patch, params: {status: "disabled", id: merchant.id} %><td>
          <td><% else merchant.status == "disabled" %><td>
          <td><%= merchant.status %><td>
          <td><%= button_to "Enable", "/admin/merchants/#{merchant.id}", method: :patch, params: {status: "enabled"} %><td>
            </tr>
    <% end %>
    <% end  %>
    </tbody>
    </table>
