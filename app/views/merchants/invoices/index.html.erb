<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Invoices</th>
      <th>Status</th>
      <th>Date Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= link_to invoice.id, merchants_invoice_path(invoice.id) %></td>
        <td><%= invoice.status %></td>
        <td><%= format_date(invoice.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


