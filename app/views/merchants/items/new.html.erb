<h1>New Item</h1>

<%= form_with url: merchants_items_path(@merchant), method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :unit_price%>
  <%= f.number_field :unit_price%>

  <%= f.label :description%>
  <%= f.text_field :description%>

  <%= f.label :status%>
  <%= f.select :status, ['enabled', 'disabled']%>

  <%= f.submit %>
<% end %>
